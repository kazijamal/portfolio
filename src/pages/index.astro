---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../components/AboutMe.astro";
import LinkSection from "../components/LinkSection.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title="Kazi Jamal">
	<main class="max-w-lg mx-auto p-6 w-full">
		<div class="flex flex-col justify-center my-6">
      <img
        src='/images/headshot.png'
        class='w-36 h-36 rounded-2xl border border-orange-200 mb-2'
      />
			<h1 class="text-6xl font-extrabold text-orange-200 my-4">Kazi Jamal</h1>

			<AboutMe />
			<LinkSection />
		</div>

		<div class="flex flex-col justify-center my-6">
			<h1 class="text-3xl font-bold text-rose-200 my-4">Projects</h1>

			<ProjectCard
				name="FitDetector"
				description="A web application to help people find out what clothes their favorite celebrities are wearing using crowdsourced data"
				href="/fitdetector"
			/>
			<ProjectCard
				name="Kazi's Library"
				description="A web application to track the books I read and resurface highlights parsed from a Kindle e-reader"
				href="/library"
			/>
			<ProjectCard
				name="Solon"
				description="A mobile application built to increase parent engagement in schools and facilitate communication with faculty"
				href="/solon"
			/>
		</div>
	</main>
</Layout>
