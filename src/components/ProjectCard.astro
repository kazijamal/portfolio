---
export interface Props {
	name: string;
	description: string;
	href: string;
}

const { name, description, href } = Astro.props as Props;
---

<div class="hover:bg-neutral-800 p-4 my-4 border-2 border-rose-200 rounded-lg">
	<a href={href}>
		<h2 class="text-xl font-bold mb-2">
			{name}
		</h2>
		<p>
			{description}
		</p>
	</a>
</div>
